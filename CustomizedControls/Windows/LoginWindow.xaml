<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" x:Class="Micro.Future.UI.LoginWindow"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterScreen" Topmost="True" Width="250" Height="220">
    <StackPanel>
        <Label Content="服务器"/>
        <ComboBox x:Name="LoginCombo" SelectedIndex="0" IsEditable="True"/>
        <Label Content="期货公司代码"/>
        <TextBox x:Name="brokerTxt"/>
        <Label Content="用户名"/>
        <TextBox x:Name="userTxt"/>
        <Label Content="密码"/>
        <PasswordBox x:Name="passwordTxt"/>
        <Button Content="登录" Click="Button_Click" IsDefault="True"/>
    </StackPanel>
</Window>
