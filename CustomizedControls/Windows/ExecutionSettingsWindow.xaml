<Window x:Class="Micro.Future.Windows.ExecutionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Micro.Future.Windows"
        mc:Ignorable="d"
        Title="筛选配置" Height="218" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="板块标题"/>
            <TextBox x:Name="titleTxt"/>
            <Label Content="交易所"/>
            <ComboBox x:Name="exchangecombo" SelectedIndex="0" IsEditable="True"/>
            <Label Content="产品种类"/>
            <TextBox x:Name="underlyingTxt"/>
            <Label Content="合约"/>
            <TextBox x:Name="contractTxt"/>
            <Button x:Name="OkBtn" Content="确定" IsDefault="True" Click="OkBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
