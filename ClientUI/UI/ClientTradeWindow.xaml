<UserControl x:Class="Micro.Future.UI.ClientTradeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Micro.Future.UI"
             xmlns:view="clr-namespace:Micro.Future.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <RadioButton GroupName="executionClass"  IsChecked="True" Content="成交记录" Checked="RadioButton_Checked"/>
            <RadioButton GroupName="executionClass"  Content="平仓记录" Checked="RadioButton_Checked_1" />

        </StackPanel>
        <ListView Name="TradeTreeView" Grid.Row="1" GridViewColumnHeader.Click="TradeTreeView_Click" ItemsSource="{Binding TradeVMCollection}">         
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Width="35" Height="15" Click="Button_Click" CommandParameter="{Binding BrokerOrderSeq}" >
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border>
                                                <Image x:Name="myimage" />
                                            </Border>
                                            <ControlTemplate.Triggers >
                                                <DataTrigger Binding="{Binding Path=Flag}" Value="False">
                                                    <Setter TargetName="myimage" Property="Source" Value="" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=Flag}" Value="True">
                                                    <Setter TargetName="myimage" Property="Source" Value="" />
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>-->
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="成交编号" DisplayMemberBinding="{Binding TradeID}"/>
                    <GridViewColumn Header="合约" DisplayMemberBinding="{Binding Contract}"/>
                    <GridViewColumn Header="买卖" DisplayMemberBinding="{Binding Direction}"/>
                    <GridViewColumn Header="开平" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="成交价格" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="成交手数" DisplayMemberBinding="{Binding Volume}"/>
                    <GridViewColumn Header="成交时间" DisplayMemberBinding="{Binding TradeTime}" />
                    <GridViewColumn Header="报单编号" DisplayMemberBinding="{Binding OrderSysID}" />
                    <GridViewColumn Header="成交类型" DisplayMemberBinding="{Binding TradingType}"/>
                    <GridViewColumn Header="投保" DisplayMemberBinding="{Binding }"/>
                    <GridViewColumn Header="交易所" DisplayMemberBinding="{Binding Exchange}"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu StaysOpen="True">
                    <!--<MenuItem Header="修改订单" />-->
                    <MenuItem Header="取消订单" Click="MenuItem_Click" />
                    <Separator />
                    <MenuItem Header="列显示设置" Click="MenuItem_Click_1" />
                    <Separator></Separator>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</UserControl>
