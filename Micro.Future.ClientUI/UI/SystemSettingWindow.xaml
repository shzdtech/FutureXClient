<Window x:Class="Micro.Future.UI.SystemSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统设置" Height="150" Width="300" 
        WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel Orientation="Vertical">
        <ComboBox x:Name="themesCombo" >
            <ComboBoxItem>Generic</ComboBoxItem>
            <ComboBoxItem>VS2010</ComboBoxItem>
            <ComboBoxItem>Aero</ComboBoxItem>
            <ComboBoxItem>Metro</ComboBoxItem>
            <ComboBoxItem>Expression Light</ComboBoxItem>
            <ComboBoxItem>Expression Dark</ComboBoxItem>
        </ComboBox>
    	<Separator Height="15"/>
            <Button Content="确定" Click="Button_Click_OK"/>
            <Button Content="取消" Click="Button_Click_Cancel" />
    </StackPanel>
</Window>
