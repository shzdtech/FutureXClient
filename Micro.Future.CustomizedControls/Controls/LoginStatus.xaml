<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Micro.Future.Controls" x:Class="Micro.Future.Controls.LoginStatus" 
             mc:Ignorable="d" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="statusIcon" Grid.Column="0" Source="{Binding ImageSource}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="promptLabel" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>

    </Grid>
</UserControl>
