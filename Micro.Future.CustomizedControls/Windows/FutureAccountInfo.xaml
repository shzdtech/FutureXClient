        <Label x:Name="labelPositionProfit" Content="{lex:Loc PositionProfit}" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelBindingPositionProfit" Content="{Binding PositionProfit, StringFormat={}{0:N}}" Grid.Row="10" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Label x:Name="labelCI" Grid.Row="11" Grid.Column="0" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelCashIn" Content="{lex:Loc CashIn}" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
