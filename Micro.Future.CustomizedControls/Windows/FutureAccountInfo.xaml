        <Label x:Name="labelBindingAV" Content="{Binding Available}" Grid.Row="22" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="23" Grid.Column="0"  HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="auto" Background="Black"/>
        <StackPanel Grid.Row="23" Grid.Column="1"  HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="auto" Background="Black"/>
        <StackPanel Grid.Row="23" Grid.Column="2"  HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="auto" Background="Black"/>
