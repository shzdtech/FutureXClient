        <Label x:Name="labelBindingPB" Content="{Binding PreBalance, StringFormat={}{0:N}}" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top" />
        <Label x:Name="labelPC" Grid.Row="2" Grid.Column="0" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelPreCredit" Content="{lex:Loc Key=PreCredit}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelBindingPC" Content="{Binding PreCredit, StringFormat={}{0:N}}" Grid.Row="2" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Label x:Name="labelPM" Grid.Row="3" Grid.Column="0" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelPreMortgage" Content="{lex:Loc PreMortgage}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
