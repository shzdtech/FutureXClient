        <Label x:Name="labelMortgage" Content="{lex:Loc Mortgage}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelBindingMG" Content="{Binding Mortgage, StringFormat={}{0:N}}" Grid.Row="4" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Label x:Name="labelWD" Grid.Row="5" Grid.Column="0" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelWithdraw" Content="{lex:Loc Withdraw}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelBindingWD" Content="{Binding Withdraw, StringFormat={}{0:N}}" Grid.Row="5" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Top"/>
